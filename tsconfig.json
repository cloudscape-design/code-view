{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2019",
    "module": "esnext",
    "jsx": "react-jsx",
    "types": [],
    "lib": [
      "es2019",
      "dom"
    ],
    "importHelpers": true,
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/**.ts",
    "src/**/**.tsx"
  ]
}