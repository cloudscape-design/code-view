{
  "name": "@cloudscape-design/code-view",
  "type": "module",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "repository": "ssh://git.amazon.com/pkg/AWS-UI-Community-CodeView",
  "homepage": "https://code.amazon.com/packages/AWS-UI-Community-CodeView",
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "prepublishOnly": "npm run build",
    "lint": "eslint --ignore-path .gitignore --ext ts,tsx,js .",
    "build": "npm-run-all build:*",
    "build:environment": "node scripts/environment",
    "build:index": "cp src/index.* dist",
    "build:highlight-ace": "sass src/highlight/theme.scss dist/highlight/theme.css",
    "build:highlight": "tsc -p src/highlight/tsconfig.json",
    "build:rollup": "rollup --config rollup.config.js",
    "build:tsc": "tsc --project ./demo/tsconfig.json",
    "build:vite": "vite build",
    "start": "npm-run-all --parallel start:*",
    "start:watch": "chokidar 'src/**' -c 'npm run build:rollup'",
    "start:server": "vite",
    "test": "vitest run --config vite.unit.config.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./copy-button": "./dist/internal/copy-button/index.js",
    "./code-view": "./dist/code-view/index.js",
    "./highlight": "./dist/highlight/index.js",
    "./highlight/javascript": "./dist/highlight/javascript.js",
    "./highlight/typescript": "./dist/highlight/typescript.js",
    "./highlight/json": "./dist/highlight/json.js",
    "./highlight/xml": "./dist/highlight/xml.js",
    "./highlight/yaml": "./dist/highlight/yaml.js"
  },
  "imports": {},
  "peerDependencies": {
    "@cloudscape-design/components": "^3.0.0",
    "react": ">= 16.8.0"
  },
  "dependencies": {
    "ace-code": "^1.32.0",
    "clsx": "^1.2.1",
    "prismjs": "^1.29.0",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@cloudscape-design/components": "^3",
    "@cloudscape-design/design-tokens": "^3",
    "@cloudscape-design/global-styles": "^1.0.1",
    "@rollup/plugin-typescript": "^11.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/prismjs": "^1.26.0",
    "@types/react": "^18.0.34",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vanilla-extract/css": "^1.11.0",
    "@vanilla-extract/rollup-plugin": "^1.2.1",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-istanbul": "^0.28.3",
    "chokidar-cli": "^3.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.20.2",
    "sass": "^1.61.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vitest": "^0.25.8"
  }
}
