{
  "name": "@cloudscape-design/code-view",
  "version": "3.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudscape-design/code-view.git"
  },
  "homepage": "https://cloudscape.design",
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "prepublishOnly": "npm run build",
    "lint": "eslint --ignore-path .gitignore --ext ts,tsx,js --fix .",
    "build": "npm-run-all build:*",
    "build:environment": "node scripts/environment",
    "build:copy": "cp README.md dist/",
    "build:index": "cp src/index.* dist",
    "build:highlight": "sass src/highlight/theme.scss dist/highlight/theme.css && tsc -p src/highlight/tsconfig.json",
    "build:test": "node scripts/test-utils",
    "build:rollup": "rollup --config rollup.config.js --bundleConfigAsCjs",
    "build:tsc": "tsc --project ./demo/tsconfig.json",
    "build:vite": "vite build",
    "build:pkg": "node scripts/package-json.js",
    "start": "npm-run-all --parallel start:*",
    "start:watch": "chokidar 'src/**' -c 'npm run build:rollup'",
    "start:server": "vite",
    "test": "vitest run --config vite.unit.config.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./code-view": "./dist/code-view/index.js",
    "./highlight": "./dist/highlight/index.js",
    "./highlight/csharp": "./dist/highlight/csharp.js",
    "./highlight/css": "./dist/highlight/css.js",
    "./highlight/docker": "./dist/highlight/docker.js",
    "./highlight/golang": "./dist/highlight/golang.js",
    "./highlight/groovy": "./dist/highlight/groovy.js",
    "./highlight/html": "./dist/highlight/html.js",
    "./highlight/java": "./dist/highlight/java.js",
    "./highlight/javascript": "./dist/highlight/javascript.js",
    "./highlight/json": "./dist/highlight/json.js",
    "./highlight/kotlin": "./dist/highlight/kotlin.js",
    "./highlight/markdown": "./dist/highlight/markdown.js",
    "./highlight/perl": "./dist/highlight/perl.js",
    "./highlight/php": "./dist/highlight/php.js",
    "./highlight/powershell": "./dist/highlight/powershell.js",
    "./highlight/python": "./dist/highlight/python.js",
    "./highlight/ruby": "./dist/highlight/ruby.js",
    "./highlight/rust": "./dist/highlight/rust.js",
    "./highlight/scala": "./dist/highlight/scala.js",
    "./highlight/sh": "./dist/highlight/sh.js",
    "./highlight/sql": "./dist/highlight/sql.js",
    "./highlight/swift": "./dist/highlight/swift.js",
    "./highlight/terraform": "./dist/highlight/terraform.js",
    "./highlight/typescript": "./dist/highlight/typescript.js",
    "./highlight/xml": "./dist/highlight/xml.js",
    "./highlight/yaml": "./dist/highlight/yaml.js"
  },
  "imports": {},
  "peerDependencies": {
    "@cloudscape-design/components": "^3.0.0",
    "react": ">= 16.8.0"
  },
  "dependencies": {
    "ace-code": "^1.32.0",
    "clsx": "^1.2.1",
    "rollup-plugin-ignore": "^1.0.10",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@cloudscape-design/components": "^3",
    "@cloudscape-design/design-tokens": "^3",
    "@cloudscape-design/documenter": "^1.0.14",
    "@cloudscape-design/global-styles": "^1.0.1",
    "@cloudscape-design/test-utils-converter": "^1.0.19",
    "@rollup/plugin-typescript": "^11.1.5",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.34",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vanilla-extract/css": "^1.11.0",
    "@vanilla-extract/rollup-plugin": "^1.2.1",
    "@vanilla-extract/vite-plugin": "^3.9.3",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-istanbul": "^0.28.3",
    "@vitest/coverage-v8": "0.34.2",
    "chokidar-cli": "^3.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "globby": "^14.0.0",
    "jsdom": "^23.0.1",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.20.2",
    "sass": "^1.61.0",
    "typescript": "^5.3.3",
    "vite": "^4.3.9",
    "vitest": "^0.32.0"
  }
}
